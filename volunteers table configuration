db.runCommand({
  collMod: "volunteers",
  validator: {
    $jsonSchema: {
      bsonType: "object",
      required: ["volunteerId", "name", "email", "phone", "eventsGoingTo", "password"],
      properties: {
        volunteerId: { bsonType: "string" },
        name: { bsonType: "string" },
        email: { bsonType: "string" },
        phone: { bsonType: "string" },
        eventsGoingTo: { bsonType: "array", items: { bsonType: "string" } },
        password: { bsonType: "string" }
      }
    }
  },
  validationLevel: "strict"
})
